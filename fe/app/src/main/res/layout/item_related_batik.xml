<?xml version="1.0" encoding="utf-8"?>
<!-- item_related_batik.xml - Template untuk satu card batik -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingBottom="2dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/relatedBatikImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/relatedBatikName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nama"
        android:paddingVertical="3dp"
        android:paddingStart="7dp"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:textStyle="bold"
        android:text="Nama Batik" />

    <LinearLayout
        android:id="@+id/relatedBatikInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loc_bottom"
        android:paddingVertical="6dp"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/relatedBatikLocationIcon"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/location_on"
            android:tint="#E9A319"/>

        <TextView
            android:id="@+id/relatedBatikLocation"
            android:textColor="@color/black"
            android:textSize="6sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Asal Daerah"/>
    </LinearLayout>
</LinearLayout>