<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <!-- AppBarLayout for header and toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="#b06c2c"
            android:paddingVertical="14dp"
            android:paddingLeft="5dp"
            android:paddingRight="27dp"
            android:elevation="26dp"
            android:orientation="horizontal">

            <!-- App Logo -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:src="@drawable/logoo_light"
                android:scaleType="fitXY" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Scan Button -->
            <ImageButton
                android:id="@+id/scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/scan"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onScanClicked"/>
        </LinearLayout>

        <!-- Toolbar Section -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_back"
            app:titleTextColor="#000000"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="16dp">

                <ImageButton
                    android:id="@+id/backButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_back"
                    app:iconTint="#000000"/>

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/backButton"
                    android:layout_centerVertical="true"
                    android:text="Nama Kain"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"/>
            </RelativeLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ScrollView for main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Main content container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Main Content Area -->
            <LinearLayout
                android:id="@+id/batik_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="22dp"
                android:orientation="vertical">

                <!-- Featured Batik Card -->
                <LinearLayout
                    android:id="@+id/batik_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_batik_info"
                    android:paddingVertical="10dp"
                    android:orientation="vertical">

                    <!-- Batik Image -->
                    <ImageView
                        android:id="@+id/batik_img"
                        android:layout_width="254dp"
                        android:layout_height="254dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/batik_image_desc"
                        android:scaleType="centerCrop"
                        tools:src="@tools:sample/backgrounds/scenic" />

                    <!-- Batik Name -->
                    <TextView
                        android:id="@+id/batik_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="11dp"
                        tools:text="Nama Kain" />

                    <!-- Batik Origin -->
                    <LinearLayout
                        android:id="@+id/batik_origin_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:id="@+id/origin_info_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/icon_loc"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/location_on"
                                android:tint="#E9A319" />

                            <TextView
                                android:id="@+id/origin_name_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:ellipsize="end"
                                tools:text="Asal Daerah" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Detail Information Section -->
            <LinearLayout
                android:id="@+id/detailContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="3dp"
                android:layout_marginBottom="39dp"
                android:layout_marginHorizontal="19dp"
                android:orientation="vertical">

                <!-- Attributes Section -->
                <LinearLayout
                    android:id="@+id/attributesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="vertical">

                    <!-- Attribute Cards -->
                    <LinearLayout
                        android:id="@+id/attributeCardsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:orientation="vertical">

                        <!-- First Row of Attributes -->
                        <LinearLayout
                            android:id="@+id/firstAttributeRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="horizontal">

                            <!-- Origin Card -->
                            <LinearLayout
                                android:id="@+id/originCard"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_info_small"
                                android:paddingVertical="11dp"
                                android:layout_marginEnd="8dp"
                                android:elevation="1dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/originLabel"
                                    android:textColor="#E9A319"
                                    android:textSize="6sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Asal Daerah"/>

                                <TextView
                                    android:id="@+id/originValue"
                                    android:textColor="#2C1810"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Asal Daerah"/>
                            </LinearLayout>

                            <!-- Era Card -->
                            <LinearLayout
                                android:id="@+id/eraCard"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_info_small"
                                android:paddingVertical="11dp"
                                android:elevation="1dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/eraLabel"
                                    android:textColor="#E9A319"
                                    android:textSize="6sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Era"/>

                                <TextView
                                    android:id="@+id/eraValue"
                                    android:textColor="#2C1810"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Era"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Second Row of Attributes -->
                        <LinearLayout
                            android:id="@+id/secondAttributeRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Type Card -->
                            <LinearLayout
                                android:id="@+id/typeCard"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_info_small"
                                android:paddingVertical="12dp"
                                android:layout_marginEnd="8dp"
                                android:elevation="1dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/typeLabel"
                                    android:textColor="#E9A319"
                                    android:textSize="6sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Jenis"/>

                                <TextView
                                    android:id="@+id/typeValue"
                                    android:textColor="#2C1810"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Jenis Kain"/>
                            </LinearLayout>

                            <!-- Meaning Card -->
                            <LinearLayout
                                android:id="@+id/meaningCard"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_info_small"
                                android:paddingVertical="12dp"
                                android:elevation="1dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/meaningLabel"
                                    android:textColor="#E9A319"
                                    android:textSize="6sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Makna"/>

                                <TextView
                                    android:id="@+id/meaningValue"
                                    android:textColor="#2C1810"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Makna"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

