                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/grid_view"
                                android:layout_marginEnd="5dp"/>

                            <TextView
                                android:id="@+id/variation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Variasi Motif"
                                android:textColor="#000000"
                                android:textSize="9sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <!-- Images Container -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <!-- Image 1 -->
                            <ImageView
                                android:id="@+id/variationImage1"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:background="@color/white"
                                android:layout_marginEnd="4dp"
                                android:elevation="1dp"
                                android:src="@mipmap/ic_launcher" />

                            <!-- Image 2 -->
                            <ImageView
                                android:id="@+id/variationImage2"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:background="@color/white"
                                android:layout_marginEnd="4dp"
                                android:elevation="1dp"
                                android:src="@mipmap/ic_launcher" />

                            <!-- Image 3 -->
                            <ImageView
                                android:id="@+id/variationImage3"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:background="@color/white"
                                android:layout_marginEnd="4dp"
                                android:elevation="1dp"
                                android:src="@mipmap/ic_launcher" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- History Section -->
                    <LinearLayout
                        android:id="@+id/historyContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/history_edu"
                                android:layout_marginEnd="5dp"/>

                            <TextView
                                android:id="@+id/historyTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sejarah &amp; Perkembangan"
                                android:textColor="#000000"
                                android:textSize="9sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_info_big"
                            android:padding="16dp"
                            android:elevation="1dp">

                            <TextView
                                android:id="@+id/historyText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#5D3A1A"
                                android:textSize="7sp"
                                android:text="Sejarah batik ini bermula..."/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

